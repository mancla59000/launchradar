# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Twitter API v2 (Free Tier)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Reddit API (Free Tier)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# Data Collection Configuration
COLLECTION_INTERVAL_MINUTES=30
MAX_POSTS_PER_COLLECTION=100

# Personal Keywords for Filtering
SEARCH_KEYWORDS=SaaS,micro-SaaS,startup,indie hacker,product launch,solopreneur,bootstrap,validation,MVP,PMF

# Personal Preferences
DEFAULT_SUBREDDITS=entrepreneur,SaaS,startups,indiehackers,sideproject,microsaas
MINIMUM_ENGAGEMENT_SCORE=5

# Production Environment Configuration
NODE_ENV=development

# Security (Production Only)
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters_long
NEXTAUTH_URL=http://localhost:3000

# Optional: Analytics & Monitoring
NEXT_PUBLIC_GA_ID=your_google_analytics_id
SENTRY_DSN=your_sentry_dsn

# Hetzner Production Settings (when deploying)
